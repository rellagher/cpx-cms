<section class="cpx-hero" allow-transparent-header>

  <div class="cpx-hero-bg">
    <video class="cpx-vid-mobile" autoplay muted loop playsinline preload="auto">
      <source src="https://cdn.shopify.com/videos/c/o/v/2255884e4a2042cdb9a7207c0f4099ec.mp4" type="video/mp4">
    </video>
    <video class="cpx-vid-desktop" autoplay muted loop playsinline preload="auto">
      <source src="https://cdn.shopify.com/videos/c/o/v/d6c6ba0714de4670934c1a22b4ff043f.mp4" type="video/mp4">
    </video>
  </div>

  <div class="cpx-hero-overlay"></div>

  <div class="cpx-hero-content">

    <div class="cpx-hero-left">
      <div class="cpx-hero-logo">
        <img src="https://cdn.shopify.com/s/files/1/0929/2408/4610/files/ACTYVA_White-logo.svg?v=1771795585" alt="ACTYVA Logo">
      </div>
      <h1 class="cpx-hero-headline">{{ hero_headline }}</h1>
      <p class="cpx-hero-body">{{ hero_body }}</p>
    </div>

    <div class="cpx-hero-right">
      <div class="cpx-hero-cta">
        <a href="#how-it-works" class="cpx-btn cpx-btn-primary" id="cpx-scroll-btn">
          {{ btn_works }}
          <span class="cpx-btn-arrow cpx-arrow-down">↓</span>
        </a>
        <a href="/collections/bundles" class="cpx-btn cpx-btn-secondary">
          {{ btn_shop }}
        </a>
      </div>
    </div>

  </div>

</section>

<script>
(function() {
  var scrollBtn = document.getElementById('cpx-scroll-btn');
  if (!scrollBtn) return;
  scrollBtn.addEventListener('click', function(e) {
    e.preventDefault();
    var current = this.closest('.shopify-section');
    if (current && current.nextElementSibling) {
      current.nextElementSibling.scrollIntoView({ behavior: 'smooth', block: 'start' });
    } else {
      window.scrollBy({ top: window.innerHeight, behavior: 'smooth' });
    }
  });
})();
</script>
